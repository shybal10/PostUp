<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    tool:cardCornerRadius="10dp"
    tool:cardPreventCornerOverlap="false"
    tool:cardUseCompatPadding="true"
    android:elevation="10dp"
    xmlns:tool="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:background="#fff"
        android:id="@+id/movie_item_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:background="@drawable/grid_image_bg"
                android:src="@drawable/ic_menu_camera"
                android:scaleType="fitXY"
                android:id="@+id/movie_image"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/shade"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:src="@drawable/viewicon"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:textColor="#fff"
                    android:textSize="13.87sp"
                    android:text="VIEWS-1987"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:text = "Vehicle Name"
                android:textSize="15.75sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="12.38sp"
                android:maxLines="2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="a small description of the product is needed here so that we"
                android:textColor="@color/colorPrimary"/>


            <TextView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:background="@drawable/smallbtngraybg"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="KD 4200"
                android:textSize="13.38sp"
                android:textColor="@color/orange"
                android:maxLines="2"

                />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
