<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    tool:cardCornerRadius="10dp"
    android:layout_marginBottom="5dp"
    tool:cardPreventCornerOverlap="false"
    android:background="#fff"
    tool:cardUseCompatPadding="true"
    android:elevation="10dp"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/movie_item_linear_layout"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="7dp"
                android:background="@drawable/image_bg"
                android:src="@drawable/ic_menu_camera"
                android:scaleType="fitXY"
                android:id="@+id/movie_image"
                android:layout_width="100dp"
                android:layout_height="120dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/movie_name_text"
                    android:text = "Vehicle Name"
                    android:textSize="15.75sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="13.38sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="2"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="a small description of the product is needed here to undertsand"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textSize="13.38sp"
                        android:textColor="@color/colorPrimary"
                        android:maxLines="2"

                        />

                    <TextView
                        android:padding="8dp"
                        android:background="@drawable/smallbtngraybg"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KD 4200"
                        android:textSize="15.75sp"
                        android:textColor="@color/orange"
                        android:maxLines="2"

                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13.87sp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Advertiser's Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_toLeftOf="@+id/date_text_view"
                android:layout_toStartOf="@+id/date_text_view"
                android:layout_centerVertical="true"
                android:src="@drawable/dat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/date_text_view"
                android:textSize="13.87sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:text="17 May 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
