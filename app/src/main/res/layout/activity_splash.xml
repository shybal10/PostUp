<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:padding="24dp"
    tools:context=".SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <ImageView
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logosplash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/english_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/english_button_border"
                android:text="@string/english"
                android:textColor="#fff"
                android:textSize="16.75sp" />
            <Button
                android:textSize="16.75sp"
                android:id="@+id/arabic_button"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:text="@string/arabic"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/arabic_button_background" />
        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/login_btn_border"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp">
            <Spinner
                android:overlapAnchor="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@android:color/transparent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/input_citizenship"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Spinner>
            <ImageButton
                android:id="@+id/spinner_click"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:src="@drawable/arrow" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>