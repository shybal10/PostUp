<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_marginBottom="80dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#333333">

        </View>

        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Vehicles"
            android:textAllCaps="true"
            android:textColor="#333333"
            android:textSize="17.67sp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#333333">

        </View>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:tool="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:id="@+id/card_view"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        tool:cardBackgroundColor="#fff"
        tool:cardCornerRadius="10dp"
        tool:cardPreventCornerOverlap="false"
        tool:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vehicles" />

                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/slider_dots"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/gray"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Item Id:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12.87sp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="#4551"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12.87sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/view"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1255 Views"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12.87sp" />
                </LinearLayout>




                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/date_text_view"
                    android:layout_toStartOf="@+id/date_text_view"
                    android:src="@drawable/dat" />

                <TextView
                    android:layout_marginStart="4dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:text="12 May 2017"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12.87sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17.87sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="a samell description about the product is necessary to understand the product"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Area: "
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="8dp"
                            android:text="Kuwait"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Condition:"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:text="Good"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:maxLines="1"
                            android:text="Price:"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"

                            />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="15dp"
                            android:padding="8dp"
                            android:background="@drawable/smallbtngraybg"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KD 4200"
                            android:textSize="15.75sp"
                            android:textColor="@color/orange"
                            android:maxLines="1"

                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray">

            </View>
            <TextView
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                android:text="Specifications"
                android:gravity="center_horizontal"
                android:textSize="16.87sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@color/gray"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text="make "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13.87sp"
                        android:text="model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@color/gray"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text="make "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13.87sp"
                        android:text="model "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@color/gray"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text="make "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13.87sp"
                        android:text="model "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@color/gray"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text="make "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textSize="13.87sp"
                        android:textColor="@color/colorPrimary"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13.87sp"
                        android:text="model "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="12.87sp"
                android:textColor="#fff"
                android:text="View ads of this user"
                android:background="@drawable/reset_button_border"
                android:layout_width="200dp"
                android:layout_height="35dp" />
            <LinearLayout
                android:background="@color/gray"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/socialmediaicon"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/imp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/phone"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/fav"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/location"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

        <ImageView
            android:layout_marginTop="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/contact"
            android:elevation="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </RelativeLayout>



</LinearLayout>