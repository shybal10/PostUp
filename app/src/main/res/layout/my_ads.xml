<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_marginBottom="45dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="#333333"
            android:textSize="16.67sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="my ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="13.87sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/push"
                android:layout_alignParentRight="true"
                android:text="active"
                android:id="@+id/active_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <Button
                android:textSize="13.87sp"
                android:background="@drawable/automatic"
                android:text="expired"
                android:id="@+id/expired_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>


    </RelativeLayout>

    <GridView
        android:layout_marginTop="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:id="@+id/gridview_categories"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:numColumns="2" />

</LinearLayout>